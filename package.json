{
  "name": "@douglasduteil/crisp",
  "version": "1.6.1",
  "description": "âš¡ Typed Crisp API",
  "keywords": [
    "crisp",
    "integration",
    "wrapper",
    "api",
    "rest"
  ],
  "license": "WTFPL",
  "author": "Douglas Duteil <douglasduteil@gmail.com> (https://douglasduteil.github.io/)",
  "type": "module",
  "imports": {
    "#src/*": "./src/*.ts",
    "#test/*": "./test/*.ts"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    },
    ".": {
      "default": "./index.ts"
    }
  },
  "main": "./index.ts",
  "types": "./index.ts",
  "files": [
    "src",
    "index.ts"
  ],
  "scripts": {
    "test:local": "bun test --env-file=.env.local"
  },
  "release": {
    "npmPublish": false,
    "plugins": [
      [
        "semantic-release-gitmoji",
        {
          "releaseRules": {
            "major": [
              ":boom:"
            ],
            "minor": [
              ":sparkles:"
            ],
            "patch": [
              ":bug:",
              ":ambulance:",
              ":pirate_flag:",
              ":lock:"
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npx prettier --write CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "tarballDir": ".semantic-release"
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": ":bookmark: ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": ".semantic-release/*.tgz"
        }
      ]
    ]
  },
  "devDependencies": {
    "@types/bun": "^1.1.4",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  }
}
